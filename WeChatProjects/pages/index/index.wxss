.page {
  height: 100vh;/*相对单位*/
  display: flex;
  flex-direction: column;
}
.page__bd {
  flex: 1;
}
.page__ft {
  /* height: 25vh; */
  background-color: #fff;
  padding: 20rpx;
}
.main-text {
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  color: #fff;
  background: #4a4c5b;
  font-size: 32rpx;
  border-radius: 4rpx;
}
#myMap {
  width: 100%;
  height: 100%;
}

.map-shadow-top {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  left: 0;
}
