.wrapper .group {
  padding: 0 36rpx 10rpx 36rpx;
  background: #fff;
  margin-bottom: 16rpx;
}
.wrapper .group-bar {
    height: 114rpx;
    text-align: center;
}
.group-bar .group-title {
    position: relative;
    display: inline-block;
    padding: 0 12rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 4rpx;
    border: 1px solid #e0e0e2;
    font-size: 28rpx;
    color: #ccc;
    margin-top: 38rpx;
    overflow: visible;
}
.group-bar .group-title::after,
.group-bar .group-title::before {
    content: '';
    top: 18rpx;
    position: absolute;
    width: 32rpx;
    height: 1rpx;
    border-bottom: 1px solid #efefef;
}
.group-bar .group-title::after {
    left: -56rpx;
}
.group-bar .group-title::before {
    right: -56rpx;
}
.group-bar .group-title.on {
    border: 1px solid #ffc60e;
    color: #ffc60e;
}
.group-content-item {
    position: relative;
    width: 100%;
    height: 194rpx;
    margin-bottom: 28rpx;

}
.wrapper .group-content-item-desc {
    font-size: 36rpx;
    font-weight: 500;
    height: 156rpx;
    margin-right: 300rpx;
    margin-top: 8rpx;
    overflow: hidden;
    color: #333333;
}
.wrapper .group-content-item-img {
    position: absolute;
    right: 0;
    top: 0;
    vertical-align: top;
    width: 260rpx;
    height: 194rpx;
    
}