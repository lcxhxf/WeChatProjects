<loading hidden="{{hiddenLoading}}">数据加载中...</loading>
<scroll-view scroll-y="true" class="root-wrap">
    <view class="wrapper">
        <view class="info">
            <view class="info-title">{{article.title}}</view>
            <view class="info-desc cf">
                <text class="info-desc-author fl">
                    {{article.author}}
                </text>
                <text class="info-desc-date fr">
                    {{article.date}}
                </text>
                <view class="info-line under-line"></view>
            </view>
        </view>
        <view class="content">
            {{aritlce.content}}
        </view>
        <view class="footbar">
            <form>
                <button class="footbar-back">
                    返回
                </button>
                <button class="footbar-btn">下一篇</button>
                <button class="footbar-share">分享</button>
            </form>
        </view>
    </view>
</scroll-view>
