page {
  background: #fbfbfb;
  height: 100%;
}
.root-wrap {
  height: 100%;
}
.wrapper {
  padding-bottom: 96rpx;
}
.wrapper .top-img {

}
.wrapper .info {
  padding: 0 36rpx;
}
.wrapper .info-title {
  padding: 40rpx 0;
  line-height: 60rpx;
  font-size: 44rpx;
  font-weight: 500;
  color: #333;
}
.wrapper .info-desc {
  font-size: 28rpx;
  line-height: 30rpx;
  color: #c1c1c1;
}
.info-desc .info-desc-author {
  float:left;/*BFC*/
  max-width: 65%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.info-desc .info-desc-date {
  float: right;
}
.footbar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  font-size: 32rpx;
  color: #333;
}
.footbar-back, .footbar-share {
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  bottom: 0;
  z-index: 2;
}
.footbar-share {
  right: 0;
}

