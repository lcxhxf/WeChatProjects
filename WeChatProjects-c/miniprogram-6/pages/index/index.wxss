.swiper-container {
  width: 750rpx;
  height: 375rpx;
  position: relative;
  z-index: 1;
}
.swiper-container .swiper-outer,
.swiper-container .swiper-outer image {
  width: 750rpx;
  height: 375rpx;
}
.goodsDynamic {
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
}
.goodsDynamic .swiper-inner {
  width: 100%;
  height: 34rpx;
}
.goodsDynamic-item {
  width: 100%;
  display: flex;
  align-items: center;
  height: 36rpx;
}
.goodsDynamic-item image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.goodsDynamic-item text {
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

/* category */
.category-container {
  padding-bottom: 10px;
  margin-top: 6rpx;
  position: relative;
  background-color: #fff;
}
.category-box {
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0px 0px 18px 0px rgba(5, 5, 5, 0.15);
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10px;
  padding: 20rpx 0;
  position: inherit;
}
.category-list {
  width: 140rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.category-column {
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}
.category-imgbox {
  width: 100rpx;
  height: 100rpx;
}
.category-title {
  font-size: 24rpx;
  text-align: center;
}
/* 优惠券 */
.notice-box {
  width: 100vw;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #efeff4;
}
.notice_swiper {
  height: 88rpx;
  width: 100%;
}
.notice_itemr {
  padding-left: 16rpx;
  font-size: 24rpx;
  overflow: hidden;
  color: #e64340;
}
.notice-icon {
  width: 130rpx;
  height: 33rpx;
  margin-right: 10rpx;
}

/* 商品列表 */
.table-text {
  color:black !important;
  font-size: 16px !important;
  padding: 0 28rpx; 
}
.table-icon-goodslist {
  width: 34rpx;
  height: 45rpx;
  margin-right: 18rpx;
}